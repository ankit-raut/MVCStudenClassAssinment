@model MVCStudenClassAssinment.Model.StudenParentViewModel

@{
    ViewBag.Title = "Edit";

    List<SelectListItem> selectListItems = new List<SelectListItem>() { new SelectListItem { Text = "Select Class", Value = "0" } };
